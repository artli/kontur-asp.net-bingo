@model CartViewModel
@{
    ViewBag.Title = "Chosen characters";
}

@Html.ValidationSummary()

<h3>Characters you have voted for:</h3>

@foreach (var character in Model.Characters)
{
    @Html.Partial("_CharacterCard", new CharacterCardViewModel { CharacterViewModel = character, UserHasSavedVotes = Model.UserHasSavedVotes });
}

<p>
    @using (Html.BeginForm("SaveVotes", "Characters")) {
        <input type="submit" value="Save votes">
    }
</p>

<p>@Html.ActionLink("Back to voting", "List")</p>
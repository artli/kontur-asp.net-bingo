@model UserViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            <input class="form-control" placeholder="Логин" name="Login" type="text" autofocus>
        </div>
        <div class="form-group">
            <input class="form-control" placeholder="Пароль" name="Password" type="password" value="">
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => m.IsPersistent)
                @Html.DisplayNameFor(m => m.IsPersistent)
            </label>
        </div>
        <!-- Change this to a button or input when using this as a form -->
        <input type="submit" class="btn btn-lg btn-success btn-block" value="Вход" />
    </fieldset>
}